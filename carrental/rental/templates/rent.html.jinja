{% extends "base.html.jinja" %}
{% block content %}

<div class="container">
    <div class="row">
        <div class="col m-4">
            <div class="card">
                <div class="card-header bg-dark text-white align"><i class="fa fa-envelope"></i> Wypożyczenie
                </div>
                <div class="card-body">
                {% if message  %}
                            <p>{{message}}</p>
                        {% else %}
                            <form action="{% url 'rent' car_id=car_id %}" method="POST">
                            {% csrf_token %}
                            {{form_order.as_p}}
                            <div class="mx-auto">
                            <button type="submit" class="btn btn-primary text-right">Wypożycz</button></div>
                        </form>
                        {% endif %}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock%}